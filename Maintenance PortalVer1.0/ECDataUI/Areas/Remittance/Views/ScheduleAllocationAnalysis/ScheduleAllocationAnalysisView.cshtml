                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.DROfficeListID, @Model.DROfficeList, new { @class = "form-control minimal", id = "DROfficeListID", autocomplete = "off", tabindex = 1 })
