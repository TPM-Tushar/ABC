<div class="container">
    <div class="col-md-offset-0">
        @*col-md-offset-0 well*@
        <div class="">
            <div class="row">
                <br />





                <div class="panel panel-default" id="SearchResult" style="width: 100%; box-shadow: 5px 5px 10px #d0d3d4; background: #FBFCFC; display: block;">
                    <div class="panel-body">
                        <div id='DtlsSearchParaListCollapse' class="row well-custom collapsed" data-toggle="collapse" data-target="#DtlscollapseSearchPara" aria-expanded="false" aria-controls="DtlscollapseSearchPara" style="height: 35px; padding-top: 10px; cursor: pointer;">
                            <span style="cursor: pointer; margin-bottom: 20px;">
                                <span id="DtlsToggleIconSearchPara" class="fa fa-plus-square-o fa-pull-left fa-2x" style="margin-left: 05px; font-size: 103%; padding-top: 2px; color: #FFF"></span>
                            </span>
                            <span class="" style="color: #fff; font-size: 120%;">Data Fetch Requests</span>
                        </div>
                        <div id="DtlscollapseSearchPara" class="collapse" style="text-align: center; background: #fff; border: 1px solid #ECF0F1 !important; padding-top: 1%; border-radius: 5px;">
                            <div class="clsTblWrapper" style="text-align: center; margin-left: 1%; margin-right: 1%;">

                                <table id="RegisteredJobsTblID" class="table table-striped table-bordered table-condensed table-hover" style="vertical-align: middle;background-color: aliceblue; overflow: hidden; border: solid; width: 98%;">
                                    <thead>
                                        <tr>
                                            <th>Job ID</th>
                                            <th>Office Name</th>
                                            <th>From Month</th>
                                            <th>From Year</th>
                                            <th>To Month</th>
                                            <th>To Year</th>
                                            <th>Job Registeration DateTime</th>
                                            <th>Is Job Completed</th>
                                            <th>Job Completion DateTime</th>
                                            <th>Description</th>
                                            <th>Office Type</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                </br>



                <div class="panel panel-default" id="" style="width: 100%; box-shadow: 5px 5px 10px #d0d3d4; background: #FBFCFC; ">
                    @*<div class="panel-body">*@
                    <div class='row well-custom' id='' data-toggle="collapse in" data-target="" aria-expanded="false" aria-controls="" style="height: 35px; padding-top: 10px;">
                        @*<span style="cursor:pointer;margin-bottom:20px;">
            <span id="ToggleIconID" class="fa fa-minus-square-o fa-pull-left" style="margin-left: 05px;font-size:120%;padding-top:2px; color: #FFF"></span>
        </span>*@



                        <span id="" style="margin-left: 05px;font-size:120%;padding-left:1%;"></span>
                        <span class="" id="panelHeadingForForm" style="color: #FFF;font-size:120%;">Data Fetch Request Registration</span>
                        @*<span id="closeJobRegistrationForm"><i class="fa fa-times-circle text-danger removeIcon pull-right" style="cursor: pointer; font-size: 165%;" title="Close"></i></span>*@
                    </div>



                    <div id="dvBtnAddNewJobReq" style="text-align: center; background: #fff; border: 1px solid #ECF0F1; padding-top: 1%;">

                        <div class="row">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-6" id="btnAddNewJobDetails" style="cursor: pointer;">
                                <div class="row" style="border: 1px solid #ECF0F1; box-shadow: 2px 2px 2px #dadada; background-color: #73a9d9  !important; border-radius: 15px;">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-8">
                                        <h3>
                                            <span class="" style="color: #FFF; vertical-align: super;">
                                                Add New Data Fetch Request
                                            </span>
                                        </h3>
                                    </div>
                                    <div class="col-md-2">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                            </div>
                            <br />
                        </div>
                    </div>





                    <div id="dvJobRegistrtionForm" style="background: #fff; border: 1px solid #ECF0F1; padding-top: 1%; overflow-y: auto;">
                        <div id="">
                            <form method="POST" id="RegisterJobsForm" style="margin-left: 10px;margin-right: 10px;">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model =>model.OfficeType)
                                <fieldset>
                                    <div class="col-md-12">
                                        @*style="border: solid 1px #d1d1d1;border-radius:12px;display: flex;">*@

                                        <fieldset>
                                            <div class="row">
                                                <div class="col-md-4"> </div>
                                                <div class="col-md-4">
                                                    <div class="col-md-2"></div>
                                                    <div class="col-md-4">
                                                        <label class="containerForRadio">
                                                            <span style="vertical-align: middle;font-size:14px;font-weight:300;font-family:Arial, Helvetica, sans-serif;">SR Office</span>
                                                            <input type="radio" name="OfficeTypeToGetDropDown" id="OfficeTypeToGetDropDown" value="SRO">
                                                            <span class="checkmarkForRadio"></span>
                                                        </label>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="containerForRadio">
                                                            <span style="vertical-align: middle;font-size:14px;font-weight:300;font-family:Arial, Helvetica, sans-serif;">DR Office</span>
                                                            <input type="radio" name="OfficeTypeToGetDropDown" id="OfficeTypeToGetDropDown" value="DRO">
                                                            <span class="checkmarkForRadio"></span>
                                                        </label>
                                                    </div>
                                                    <div class="col-md-2"></div>
                                                </div>
                                                <div class="col-md-4"> </div>
                                            </div>
                                            <div class='row'>

                                                <div class="col-md-12 textAlignLeft" style="padding-top:1%;">

                                                    <div class="col-md-4"></div>

                                                    <div class="col-md-4" id="SRODropDownListID">
                                                        <div class="col-md-4">
                                                            @Html.LabelFor(model => model.SROfficeList, new { @class = "PaddingTop10" }, Mandatory.Yes)
                                                        </div>
                                                        <div class="col-md-8">
                                                            @Html.DropDownListFor(model => model.SROfficeID, @Model.SROfficeList, new { @class = "form-control minimal", id = "SROOfficeListID", autocomplete = "off", tabindex = 1 })
                                                            @Html.ValidationMessageFor(model => model.SROfficeID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4"></div>
                                                </div>
                                            </div>

                                            <hr size="30">

                                            <div class='row'>

                                                <div class="col-md-12 textAlignLeft" style="padding-top:1%;">


                                                    <div class="col-md-3" id="FromMonthDropDownListID">
                                                        <div class="col-md-4">
                                                            @Html.LabelFor(model => model.Month, new { @class = "PaddingTop10" }, Mandatory.Yes)
                                                        </div>
                                                        <div class="col-md-8">
                                                            @Html.DropDownListFor(model => model.FromMonthID, @Model.Month, new { @class = "form-control minimal", id = "FromMonthListID", autocomplete = "off", tabindex = 4 })
                                                            @Html.ValidationMessageFor(model => model.FromMonthID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3" id="FromYearDropDownListID">
                                                        <div class="col-md-5">
                                                            @Html.LabelFor(model => model.Year, new { @class = "PaddingTop10" }, Mandatory.Yes)
                                                        </div>
                                                        <div class="col-md-7">
                                                            @Html.DropDownListFor(model => model.FromYearID, @Model.Year, new { @class = "form-control minimal", id = "FromYearListID", autocomplete = "off", tabindex = 2 })
                                                            @Html.ValidationMessageFor(model => model.FromYearID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3" id="ToMonthDropDownListID">
                                                        <div class="col-md-4">
                                                            @Html.LabelFor(model => model.ToMonthID, new { @class = "PaddingTop10" }, Mandatory.Yes)
                                                        </div>
                                                        <div class="col-md-8">
                                                            @Html.DropDownListFor(model => model.ToMonthID, @Model.Month, new { @class = "form-control minimal", id = "ToMonthListID", autocomplete = "off", tabindex = 5 })
                                                            @Html.ValidationMessageFor(model => model.ToMonthID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3" id="ToYearDropDownListID">
                                                        <div class="col-md-4">
                                                            @*@Html.LabelFor(model => model.Year, new { @class = "PaddingTop10" }, Mandatory.Yes)*@
                                                            @Html.LabelFor(model => model.ToYearID, new { @class = "PaddingTop10" }, Mandatory.Yes)
                                                        </div>
                                                        <div class="col-md-8">
                                                            @Html.DropDownListFor(model => model.ToYearID, @Model.Year, new { @class = "form-control minimal", id = "ToYearListID", autocomplete = "off", tabindex = 3 })
                                                            @Html.ValidationMessageFor(model => model.ToYearID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>



                                                </div>
                                            </div>

                                        </fieldset>

                                    </div>

                                    <div class="col-md-12" style="text-align:center;margin-top:1%;">
                                        <br>
                                        <button type="button" class="btn btn-group-md btn-success" id="btnRegisterJob" title="Register Ticket Details" tabindex="6">Register</button><i>&nbsp;</i>
                                        <button type="reset" class="btn btn-group-md btn-warning btnResetClass" id="btnReset" title="Reset" tabindex="7">Reset</button><i>&nbsp;</i>
                                        <button type="button" class="btn btn-group-md btn-danger " id="btncloseJobRegistrationForm" title="Close" tabindex="8">Close</button><i>&nbsp;</i>

                                        @*<button type="button" class="btn btn-group-md btn-danger btnCancelClass" id="btnCancelForAdd" title="Cancel">Cancel</button>*@
                                    </div>
                                </fieldset>


                                <br /><br />






                            </form>
                        </div>
                    </div>
                    <br>
                </div>
            <br />











            </div>
        </div>
    </div>
</div>

