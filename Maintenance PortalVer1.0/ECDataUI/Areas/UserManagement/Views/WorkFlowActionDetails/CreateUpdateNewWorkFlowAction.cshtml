@*<script src="~/Areas/UserManagement/Scripts/WorkFlowAction/CreateWorkFlowAction.js"></script>*@
<script src="~/Areas/UserManagement/Scripts/WorkFlowAction/CreateWorkFlowAction.min.js"></script>


<div class="col-md-offset-0">

    <div class="panel panel-default" id="panelWorkFlowAction" style="width: 100%; box-shadow: 5px 5px 10px #d0d3d4; background: #FBFCFC; ">

        <div class="panel-body">
            <div class='row well-custom' style="height: 35px; padding-top: 10px; margin-right: 0px; margin-left: 0px;">
                <span id="" style="margin-left: 05px;font-size:120%;padding-left:1%;"></span>
                @if (Model.IsForUpdate)
                {
                    <span class="" id="panelHeadingForForm" style="color: #FFF;font-size:120%;">Update Work Flow Action Details </span>
                }
                else
                {
                    <span class="" id="panelHeadingForForm" style="color: #FFF;font-size:120%;">New  Work Flow Action Details</span>
                }



                <span id="closeWorkFlowActionForm"><i class="fa fa-times-circle text-danger removeIcon pull-right" style="cursor:pointer;font-size:165%;" title="Close"></i></span>
            </div>
            <form id="WorkFlowActionDetailsForm">
                <div class="" style="background: #fff; border: 1px solid #ECF0F1; padding-top: 1%; padding-left: 1%;padding-right: 1%;padding-bottom: 1%; overflow-y: auto;">



                    <div class="" style="background: #fff;overflow-y: auto; max-height: 600px;">
                        <div class="row">
                            <div class="col-md-12">

                                <fieldset>
                                    <div class="col-md-12" style="border: solid 1px #d1d1d1;border-radius:12px;display: flex;">

                                        <div class="col-md-5">
                                            <br>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(m => m.EncryptedId)
                                            <fieldset>
                                                <div class="row">
                                                    <div class="col-md-6 PaddingTop10">
                                                        @Html.LabelFor(model => model.Discription, new { @class = "control-label " }, Mandatory.Yes)

                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control minimal", @id = "Discriptiontxt" ,tabindex=1} })
                                                        @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <br>
                                                <div class="row">

                                                    <div class="col-md-6 PaddingTop10">
                                                        @Html.LabelFor(model => model.DiscriptionR, new { @class = "control-label " }, Mandatory.Yes)

                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.DiscriptionR, new { htmlAttributes = new { @class = "form-control minimal", tabindex = 3 } })
                                                        @Html.ValidationMessageFor(model => model.DiscriptionR, "", new { @class = "text-danger" })
                                                    </div>

                                                </div>
                                                <br>
                                                <div class="row">
                                                    <div class="col-md-6 ">
                                                        @Html.LabelFor(model => model.isActive, new { @class = "control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.isActive, new { htmlAttributes = new { tabindex = 5 } })
                                                        @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                                                    </div>
                                                </div><br>                          
                                            </fieldset>
                                        </div>


                                        <div class="col-md-2 " style="text-align: center;">
                                            <div class="verticalLine1"></div>
                                        </div>

                                        <div class="col-md-5">
                                            <br>
                                            <fieldset>
                                                <div class="row">
                                                    <div class="col-md-6 PaddingTop10">
                                                        @Html.LabelFor(model => model.StatusMessage, new { @class = "control-label " }, Mandatory.Yes )

                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.StatusMessage, new { htmlAttributes = new { @class = "form-control minimal", tabindex = 2} })
                                                        @Html.ValidationMessageFor(model => model.StatusMessage, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <br>

                                                <div class="row">
                                                    <div class="col-md-6 PaddingTop10">
                                                        @Html.LabelFor(model => model.StatusMessageR, new { @class = "control-label " }, Mandatory.Yes)
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.StatusMessageR, new { htmlAttributes = new { @class = "form-control minimal", tabindex = 4 } })
                                                        @Html.ValidationMessageFor(model => model.StatusMessageR, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <br>

                                                <div class="row">
                                                    <div class="col-md-6 PaddingTop10">
                                                        @Html.LabelFor(model => model.ServiceId, new { @class = "control-label " }, Mandatory.Yes)
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.DropDownListFor(model => model.ServiceId, Model.ServiceList, new { @class = "form-control minimal", tabindex = 6})
                                                        @Html.ValidationMessageFor(model => model.ServiceId, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                
                                            </fieldset>
                                        </div>

                                    </div>

                                </fieldset>
                                <br>


                            </div>
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-md-6 col-md-offset-5">
                            @if (Model.IsForUpdate)
                            {
                                <button type="button" class="btn btn-group-md btn-success" id="btnUpdate" title="Create">Update</button><i>&nbsp;</i>
                            }
                            else
                            {
                                <button type="button" class="btn btn-group-md btn-success" id="btnSave" title="Create">Create</button><i>&nbsp;</i>
                                <button type="reset" class="btn btn-group-md btn-warning " id="btnReset" title="Reset">Reset</button><i>&nbsp;</i>
                            }

                            <button type="reset" class="btn btn-group-md btn-danger " id="btnCancel" title="Cancel">Cancel</button>
                        </div>
                    </div>
                </div>
          

            </form>
        </div>
    </div>
</div>
