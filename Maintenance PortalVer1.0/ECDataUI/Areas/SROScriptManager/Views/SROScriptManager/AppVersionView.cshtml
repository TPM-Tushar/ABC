                <span>@Html.RadioButtonFor(model => model.IsDROOfficestr, "10", new { @class = "form-check-input", @id = "rdnIsSROOfficeDtls", @tabindex = 1, @title = "Enable" })</span> <label style="font-weight :bold">SR Office</label>
            </div>
